{
  "name": "rain-mixer",
  "private": true,
  "version": "0.0.1",
  "main": "dist/electron/main.cjs",
  "type": "module",
  "homepage": "https://danmyers300.github.io/rain-mixer",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && bun run vite build",
    "electron:dev": "sh ./electron/cjs.sh && concurrently -k \"bun run dev\" \"tsc -p electron/tsconfig.json --watch\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron dist/electron/main.cjs\"",
    "electron:build": "bun run build && tsc -p electron/tsconfig.json && sh ./electron/cjs.sh && electron-builder",
    "npm:electron:build": "npm run build && tsc -p electron/tsconfig.json && sh ./electron/cjs.sh && electron-builder",
    "lint": "eslint .",
    "preview": "vite preview",
    "pages": "bun run gh-pages -d dist --cname rain.danmyers.net",
    "deploy": "bun run build && bun run pages"
  },
  "build": {
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "linux": {
      "target": [
        "dir"
      ]
    },
    "npmRebuild": false
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.0.9",
    "@tailwindcss/postcss": "^4.0.8",
    "@tailwindcss/vite": "^4.0.9",
    "@types/bun": "^1.2.4",
    "autoprefixer": "^10.4.20",
    "gh-pages": "^6.3.0",
    "install": "^0.13.0",
    "postcss": "^8.5.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.2.0",
    "tailwindcss": "^4.0.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^34.3.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.19.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.22.0",
    "vite": "^6.1.0",
    "wait-on": "^8.0.2"
  }
}
